<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cityNpc">
	<resultMap id="cityRstMap" type="city">
		<id property="id" column="ID"/>
		<result property="createdDt" column="CREATED_DT" />
		<result property="updatedDt" column="UPDATED_DT" />
		<result property="cityName" column="CITY_NAME" />
		<result property="cityCode" column="CITY_CODE" />
		<result property="multiple" column="MULTIPLE" />
		<association property="createdUser" column="CREATED_USER" select="adminNpc.queryByAdminId"/>
		<association property="updatedUser" column="UPDATED_USER" select="adminNpc.queryByAdminId"/>
	</resultMap>

	<sql id="query_where">
		<where>
			<if test="city != null">
				<if test="city.id != null and city.id != ''">
					and T.ID = #{city.id}
				</if>
			</if>
		</where>
	</sql>

	<select id="query" resultMap="cityRstMap" parameterType="map">
		SELECT T.* FROM `T_CITY` T
		<include refid="query_where" />
		order by T.cityName asc
	</select>
	
	<select id="queryByCityId" resultMap="cityRstMap" parameterType="map">
		SELECT T.* FROM `T_CITY` T
		where T.id = #{id}
	</select>
	
	<insert id="add" parameterType="city">
		<selectKey resultType="java.lang.String" keyProperty="id" order="AFTER" >
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO `T_CITY`(
			CREATED_USER, CREATED_DT, UPDATED_USER, UPDATED_DT,
			CITY_NAME, CITY_CODE, MULTIPLE
		) VALUES (
			#{createdUser.id}, NOW(), #{updatedUser.id}, NOW(),
			#{cityName}, #{cityCode}, #{multiple}
		)
	</insert>
	
	<update id="update" parameterType="city">
		update `T_CITY` set
			UPDATED_USER = #{updatedUser.id},
			UPDATED_DT = NOW(),
			CITY_NAME = #{CITY_NAME},
			CITY_CODE = #{cityCode},
			MULTIPLE = #{multiple}
			
			WHERE ID = #{id}
	</update>
	
	<delete id="delete" parameterType="city">
		delete from `T_CITY` where ID = #{id}
	</delete>
</mapper>